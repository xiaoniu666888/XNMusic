/* components/video-item/video-item.wxss */
.item {
  margin-bottom: 30rpx
}

.album {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
}

.album .image {
  width: 100%;
}

.info {
  width: 100%;
  position: absolute;
  box-sizing: border-box;
  bottom: 8rpx;
  display: flex;
  justify-content: space-between;
  color: #fff;
  font-size: 24rpx;
}

 .info .playCount {
  padding-left: 36rpx; 
  position: relative;

}

