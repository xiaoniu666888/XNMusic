/* pages/main-music/main-music.wxss */
page{
  --search-padding: 10px,0;
  box-sizing: border-box;
  padding: 0 24rpx;
  background-color: #fafafa;
}

/* 轮播图样式 */
.banner{
  border-radius: 12rpx;
  overflow: hidden;
  /* 轮播图高度 */
  /* height: 130px; */
}
.banner-image{
  width: 100%;
}

/* 播放工具栏 */
.play-bar-placeholder {
  height: 50px;
}
.play-bar {
  position: fixed;
  left: 0;
  right: 0;
  height: 44px;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 8px;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, .1);
  background: #fafafa;
}

.play-bar .left, .play-bar .right {
  display: flex;
  align-items: center;
  /* justify-content: center; */
}

.play-bar .left .album {
  position: relative;
  top: -8px;
  width: 44px;
  height: 44px;
  border-radius: 50%;
}

.play-bar .left .name {
  font-size: 14px;
  margin-left: 10rpx;
}
 .play-bar .right .icon {
   width: 20px;
   height: 20px;
 }

 .play-bar .right .play {
   width: 25px;
   height: 25px;
   margin-right: 20rpx;
 }

 @keyframes rotateAnim {
   0% {
     transform: rotate(0);
   }
   100% {
     transform: rotate(360deg);
   }
 }

 .album-anim {
   animation: rotateAnim 10s linear infinite;
 }